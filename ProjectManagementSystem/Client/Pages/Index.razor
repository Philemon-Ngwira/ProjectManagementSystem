            <MudItem xs="12" md="6">
                <MudCard Class="shadow mb-3">
                    <MudCardContent>
                        <MudText><b>Download Rates</b></MudText>
                        <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="350" ChartOptions="options"></MudChart>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="6">
