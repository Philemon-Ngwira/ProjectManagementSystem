        </Authorized>

    </AuthorizeView>

    <MudItem xs="12" md="6">
        <MudCard Class="shadow mb-3">
            <MudCardContent>
                <MudTable Items="@employees" Hover="true" Breakpoint="Breakpoint.Sm" T="Employee">
                    <HeaderContent>
                        <MudTh>Id</MudTh>
                        <MudTh>First Name</MudTh>
                        <MudTh>Last Name</MudTh>
                        <MudTh>Gender</MudTh>
                        <MudTh>Role</MudTh>
